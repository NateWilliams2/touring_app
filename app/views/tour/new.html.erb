<% provide(:title, "New Tour") %>
<!--image from https://icon-library.net/icon/tour-icon-25.html-->
<% provide(:icon_path, "tour.png") %>
  <div class="col-md-6 col-md-offset-3">
    <div class="content">
      <%= form_for(@tour, url: create_tour_path) do |f| %>
        <%= render 'shared/tour_error_messages' %>

        <p><%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %></p>

        <p><%= f.label :start_date %>
          <%= f.date_field :start_date, class: 'form-control' %></p>

        <p><%= f.label :end_date %>
          <%= f.date_field :end_date, class: 'form-control' %></p>

        <p><%= f.submit "Create Tour", class: "btn btn-primary" %></p>
      <% end %>
    </div>
  </div>